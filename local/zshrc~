ZSH=$HOME/.oh-my-zsh
ZSH_THEME="hl7"

source $ZSH/oh-my-zsh.sh
stty stop undef
unsetopt correct
unsetopt correct_all

export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export EDITOR=vim
export BROWSER=safari
export PAGER='less -S'
export TERM=xterm-256color
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin

alias -r g='git'
alias -r v='vim'
alias -r h='history | grep -i'
alias -r p='ps ax | grep -v grep | grep -i'
alias -r fjson='python -m json.tool'
alias -r tm='tmux attach || tmux new'
